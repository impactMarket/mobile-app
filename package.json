{
    "main": "AppEntry.js",
    "scripts": {
        "start": "expo start",
        "android": "expo start --android",
        "ios": "expo start --ios",
        "web": "expo start --web",
        "eject": "expo eject",
        "postinstall": "rm -rf ./node_modules/expo/node_modules/expo-font/ && rm -rf node_modules/@celo/dappkit/node_modules/expo*",
        "prettier": "prettier --write ./**/*.{ts,tsx}",
        "eslint": "eslint --fix ./**/*.{ts,tsx}",
        "test": "jest --maxWorkers=50%",
        "test:watch": "jest --watch --maxWorkers=25%"
    },
    "jest": {
        "preset": "jest-expo",
        "setupFiles": [
            "./jestSetup.ts"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif)$": "<rootDir>/node_modules/react-native/Libraries/Image/RelativeImageStub"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|@sentry/.*)"
        ],
        "transform": {
            "^.+\\.[jt]sx?$": "babel-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/*.{ts,tsx}",
            "!**/coverage/**",
            "!**/node_modules/**",
            "!**/babel.config.js",
            "!**/jest.setup.js"
        ]
    },
    "lint-staged": {
        "*.(ts|tsx)": [
            "eslint --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "engines": {
        "node": "14.15.1"
    },
